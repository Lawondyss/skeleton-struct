<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="author" content="Ladislav Vondráček">
  <meta n:ifset="$description" name="description" content="{$description}">
  <meta n:ifset="$keywords" name="keywords" content="{$keywords}">

  <title>{ifset #title}{include title|striptags} | {/ifset}{$title}</title>

  {control cssScreen}
  <link rel="shortcut icon" href="{$basePath}/favicon.ico">
  {block head}{/block}
</head>

<body>
  <div class="container-fluid">

    <div n:foreach="$flashes as $flash" class="alert alert-{$flash->type}" role="{$flash->type}">{$flash->message}</div>

    <h1>Hello {$presenter->name}:{$presenter->view}</h1>
    {include content}

  </div>
  {control cdnLoader}
  {block scripts}{/block}
</body>
</html>
